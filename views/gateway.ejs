<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NextBid Engine - Gateway</title>
  <link rel="icon" type="image/png" href="/images/nextbid-logo.png">
  <link rel="stylesheet" href="/css/gateway.css">
  <style>
    body {
      display: block;
      align-items: unset;
      justify-content: unset;
    }

    .gateway-container {
      max-width: 100% !important;
      margin: 0 !important;
      border-radius: 0 !important;
      border: none !important;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .gateway-main {
      padding: 30px 50px;
      flex: 1;
    }

    .welcome-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      padding-bottom: 15px;
      border-bottom: 1px solid var(--border-color);
    }

    .welcome-text h2 {
      font-size: 22px;
      color: var(--text-primary);
      margin-bottom: 3px;
    }

    .welcome-text p {
      color: var(--text-secondary);
      font-size: 13px;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .user-badge {
      background: var(--bg-input);
      padding: 6px 12px;
      border-radius: 6px;
      border: 1px solid var(--border-color);
    }

    .user-badge .name {
      font-weight: 600;
      color: var(--text-primary);
    }

    .user-badge .role {
      font-size: 10px;
      color: var(--accent-blue);
      text-transform: uppercase;
      margin-left: 8px;
    }

    .logout-btn {
      background: transparent;
      border: 1px solid var(--border-color);
      color: var(--text-secondary);
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 12px;
      transition: all 0.2s ease;
      text-decoration: none;
    }

    .logout-btn:hover {
      border-color: var(--accent-red);
      color: var(--accent-red);
    }

    /* Tabs */
    .tabs-container {
      margin-bottom: 25px;
    }

    .tabs {
      display: flex;
      gap: 0;
      border-bottom: 2px solid var(--border-color);
    }

    .tab {
      padding: 12px 30px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 600;
      color: var(--text-secondary);
      border-bottom: 2px solid transparent;
      margin-bottom: -2px;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .tab:hover {
      color: var(--text-primary);
    }

    .tab.active {
      color: var(--accent-blue);
      border-bottom-color: var(--accent-blue);
    }

    .tab .count {
      background: rgba(59, 130, 246, 0.2);
      color: var(--accent-blue);
      padding: 2px 8px;
      border-radius: 10px;
      font-size: 11px;
    }

    .tab.active .count {
      background: var(--accent-blue);
      color: #fff;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }

    /* Project Grid */
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
    }

    @media (max-width: 1400px) {
      .projects-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (max-width: 1000px) {
      .projects-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 600px) {
      .projects-grid {
        grid-template-columns: 1fr;
      }
    }

    .project-card {
      background: var(--bg-input);
      border: 1px solid var(--border-color);
      border-radius: 10px;
      padding: 20px;
      transition: all 0.2s ease;
    }

    .project-card:hover {
      border-color: var(--accent-blue);
      transform: translateY(-2px);
      box-shadow: 0 10px 30px -10px rgba(0,0,0,0.3);
    }

    .project-card {
      max-width: 400px;
    }

    .project-card.offline {
      opacity: 0.5;
    }

    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 12px;
    }

    .project-name {
      font-size: 16px;
      font-weight: 600;
      color: var(--text-primary);
    }

    .project-type {
      font-size: 11px;
      color: var(--text-muted);
      text-transform: uppercase;
      margin-top: 2px;
    }

    .project-status {
      font-size: 9px;
      font-weight: 600;
      padding: 3px 8px;
      border-radius: 4px;
      text-transform: uppercase;
    }

    .project-status.online {
      background: rgba(16, 185, 129, 0.2);
      color: var(--accent-green);
    }

    .project-status.offline {
      background: rgba(239, 68, 68, 0.2);
      color: var(--accent-red);
    }

    .project-status.pending {
      background: rgba(245, 158, 11, 0.2);
      color: var(--accent-yellow);
    }

    .project-ports {
      display: flex;
      gap: 12px;
      margin-bottom: 12px;
    }

    .port-info {
      font-size: 11px;
    }

    .port-info .label {
      color: var(--text-muted);
    }

    .port-info .value {
      color: var(--text-primary);
      font-family: monospace;
      background: rgba(0,0,0,0.3);
      padding: 2px 6px;
      border-radius: 3px;
      margin-left: 4px;
    }

    .project-desc {
      font-size: 12px;
      color: var(--text-secondary);
      line-height: 1.4;
      margin-bottom: 15px;
    }

    .project-buttons {
      display: flex;
      gap: 10px;
    }

    .env-btn {
      flex: 1;
      padding: 10px 15px;
      border-radius: 6px;
      text-align: center;
      font-size: 12px;
      font-weight: 600;
      text-decoration: none;
      text-transform: uppercase;
      transition: all 0.2s ease;
    }

    .env-btn.local {
      background: rgba(59, 130, 246, 0.15);
      color: var(--accent-blue);
      border: 1px solid rgba(59, 130, 246, 0.3);
    }

    .env-btn.local:hover {
      background: var(--accent-blue);
      color: #fff;
    }

    .env-btn.online {
      background: rgba(16, 185, 129, 0.15);
      color: var(--accent-green);
      border: 1px solid rgba(16, 185, 129, 0.3);
    }

    .env-btn.online:hover {
      background: var(--accent-green);
      color: #fff;
    }

    .env-btn.disabled {
      opacity: 0.4;
      cursor: not-allowed;
      pointer-events: none;
    }

    /* Section Headers */
    .section-header {
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-muted);
      margin: 30px 0 15px 0;
      padding-bottom: 8px;
      border-bottom: 1px solid var(--border-color);
    }

    .section-header:first-child {
      margin-top: 0;
    }

    /* Color coding for different project types */
    .project-card[data-category="sources"] {
      border-left: 3px solid #ef4444;
    }
    .project-card[data-category="dev"] {
      border-left: 3px solid #f59e0b;
    }
    .project-card[data-category="tradeline"] {
      border-left: 3px solid #10b981;
    }
    .project-card[data-category="portal"] {
      border-left: 3px solid #8b5cf6;
    }
  </style>
</head>
<body>
  <div class="gateway-container">
    <!-- Header -->
    <div class="gateway-header">
      <div class="logo">
        <img src="/images/nextbid-logo.png" alt="NextBid" class="logo-image">
        <div class="logo-text">
          <h1>NEXTBID ENGINE</h1>
          <span class="tagline">Gateway</span>
        </div>
      </div>
      <div class="version-info">
        v<%= version %> | Build <%= buildDate %>
      </div>
    </div>

    <!-- Main Gateway Content -->
    <div class="gateway-main">
      <!-- Welcome Header -->
      <div class="welcome-header">
        <div class="welcome-text">
          <h2>Welcome back, <%= user.name.split(' ')[0] %></h2>
          <p>Select a project to manage</p>
        </div>
        <div class="user-info">
          <div class="user-badge">
            <span class="name"><%= user.name %></span>
            <span class="role"><%= user.role %></span>
          </div>
          <a href="/logout" class="logout-btn">Logout</a>
        </div>
      </div>

      <!-- Tabs -->
      <div class="tabs-container">
        <div class="tabs">
          <div class="tab active" data-tab="tradelines">
            NextBid Tradeline Servers
            <span class="count"><%= tradelines.filter(t => t.category === 'tradeline').length %></span>
          </div>
          <div class="tab" data-tab="dev">
            NextBid Development Servers
            <span class="count"><%= tradelines.filter(t => t.category === 'dev').length %></span>
          </div>
          <div class="tab" data-tab="portals">
            NextBid Portal Servers
            <span class="count"><%= tradelines.filter(t => t.category === 'portal').length %></span>
          </div>
        </div>
      </div>

      <!-- Tab Content: Tradeline Servers -->
      <div class="tab-content active" id="tradelines">
        <div class="section-header">Live Servers</div>
        <div class="projects-grid">
          <% tradelines.filter(t => t.category === 'tradeline' && t.live).forEach(function(t) { %>
          <div class="project-card" data-category="tradeline">
            <div class="project-header">
              <div>
                <div class="project-name"><%= t.name %></div>
                <div class="project-type"><%= t.type %></div>
              </div>
              <span class="project-status online">ONLINE</span>
            </div>
            <div class="project-ports">
              <div class="port-info">
                <span class="label">Admin:</span>
                <span class="value">:<%= t.adminPort %></span>
              </div>
              <% if (t.enginePort) { %>
              <div class="port-info">
                <span class="label">Engine:</span>
                <span class="value">:<%= t.enginePort %></span>
              </div>
              <% } %>
            </div>
            <div class="project-desc"><%= t.description %></div>
            <div class="project-buttons">
              <a href="/admin/<%= t.slug %>/" class="env-btn online">Online</a>
            </div>
          </div>
          <% }); %>
        </div>

        <% if (tradelines.filter(t => t.category === 'tradeline' && !t.live).length > 0) { %>
        <div class="section-header">Coming Soon</div>
        <div class="projects-grid">
          <% tradelines.filter(t => t.category === 'tradeline' && !t.live).forEach(function(t) { %>
          <div class="project-card offline" data-category="tradeline">
            <div class="project-header">
              <div>
                <div class="project-name"><%= t.name %></div>
                <div class="project-type"><%= t.type %></div>
              </div>
              <span class="project-status pending">PENDING</span>
            </div>
            <div class="project-ports">
              <div class="port-info">
                <span class="label">Admin:</span>
                <span class="value">:<%= t.adminPort %></span>
              </div>
              <div class="port-info">
                <span class="label">Engine:</span>
                <span class="value">:<%= t.enginePort %></span>
              </div>
            </div>
            <div class="project-desc"><%= t.description %></div>
            <div class="project-buttons">
              <span class="env-btn online disabled">Offline</span>
            </div>
          </div>
          <% }); %>
        </div>
        <% } %>
      </div>

      <!-- Tab Content: Dev Projects -->
      <div class="tab-content" id="dev">
        <div class="projects-grid">
          <% tradelines.filter(t => t.category === 'dev').forEach(function(t) { %>
          <div class="project-card <%= t.live ? '' : 'offline' %>" data-category="<%= t.subcategory || 'dev' %>">
            <div class="project-header">
              <div>
                <div class="project-name"><%= t.name %></div>
                <div class="project-type"><%= t.type %></div>
              </div>
              <span class="project-status <%= t.live ? 'online' : 'offline' %>"><%= t.live ? 'ONLINE' : 'OFFLINE' %></span>
            </div>
            <div class="project-ports">
              <div class="port-info">
                <span class="label">Admin:</span>
                <span class="value">:<%= t.adminPort %></span>
              </div>
              <% if (t.enginePort) { %>
              <div class="port-info">
                <span class="label">Engine:</span>
                <span class="value">:<%= t.enginePort %></span>
              </div>
              <% } %>
            </div>
            <div class="project-desc"><%= t.description %></div>
            <div class="project-buttons">
              <a href="http://localhost:<%= t.adminPort %>/" class="env-btn local <%= t.live ? '' : 'disabled' %>" target="_blank">Local</a>
              <a href="http://<%= t.host %>:<%= t.adminPort %>/" class="env-btn online <%= t.live ? '' : 'disabled' %>" target="_blank">Online</a>
            </div>
          </div>
          <% }); %>
        </div>
      </div>

      <!-- Tab Content: NextBid Portals -->
      <div class="tab-content" id="portals">
        <div class="projects-grid">
          <% tradelines.filter(t => t.category === 'portal').forEach(function(t) { %>
          <div class="project-card <%= t.live ? '' : 'offline' %>" data-category="portal">
            <div class="project-header">
              <div>
                <div class="project-name"><%= t.name %></div>
                <div class="project-type"><%= t.type %></div>
              </div>
              <span class="project-status <%= t.live ? 'online' : 'pending' %>"><%= t.live ? 'ONLINE' : 'PENDING' %></span>
            </div>
            <div class="project-ports">
              <div class="port-info">
                <span class="label">Port:</span>
                <span class="value">:<%= t.adminPort %></span>
              </div>
            </div>
            <div class="project-desc"><%= t.description %></div>
            <div class="project-buttons">
              <a href="http://localhost:<%= t.adminPort %>/" class="env-btn local <%= t.live ? '' : 'disabled' %>" target="_blank">Local</a>
              <a href="http://<%= t.host %>:<%= t.adminPort %>/" class="env-btn online <%= t.live ? '' : 'disabled' %>" target="_blank">Online</a>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="gateway-footer">
      <div class="footer-left">
        NextBid Engine &copy; 2025 MBE Solutions
      </div>
      <div class="footer-right">
        <span class="connection-status online">Connected</span>
      </div>
    </div>
  </div>

  <script>
    // Tab switching
    document.querySelectorAll('.tab').forEach(tab => {
      tab.addEventListener('click', () => {
        // Remove active from all tabs
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

        // Add active to clicked tab
        tab.classList.add('active');
        document.getElementById(tab.dataset.tab).classList.add('active');
      });
    });
  </script>
</body>
</html>
