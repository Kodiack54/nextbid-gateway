# NextBid Patcher Environment Variables

# Server
PORT=3001
SERVER_HOST=localhost

# Session
SESSION_SECRET=your-secure-session-secret-change-this

# Supabase (shared database)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=your-service-key

# Master Dashboard URL (redirect after login)
MASTER_DASHBOARD_URL=http://localhost:3000

# Dev Droplet (external IP for development environment)
# Set this to the IP address of the dev droplet
DEV_DROPLET_HOST=

# Environment
NODE_ENV=development
