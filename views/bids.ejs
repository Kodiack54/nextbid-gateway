<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Bids - NextBid</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f5f6fa;
      color: #333;
    }

    .navbar {
      background: #1a1a2e;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar h1 { color: #fff; font-size: 20px; }
    .navbar h1 span { color: #e94560; }
    .navbar a { color: #aaa; text-decoration: none; margin-left: 20px; }
    .navbar a:hover { color: #fff; }
    .navbar a.active { color: #e94560; }

    .container {
      max-width: 1200px;
      margin: 30px auto;
      padding: 0 20px;
    }

    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 24px;
    }

    .page-header h2 {
      color: #1a1a2e;
      font-size: 24px;
    }

    .stats-row {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 16px;
      margin-bottom: 24px;
    }

    .stat-card {
      background: #fff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .stat-card h4 {
      color: #666;
      font-size: 13px;
      font-weight: 500;
      margin-bottom: 8px;
    }

    .stat-card .value {
      font-size: 32px;
      font-weight: 700;
      color: #1a1a2e;
    }

    .stat-card.interested .value { color: #1565c0; }
    .stat-card.bidding .value { color: #e94560; }
    .stat-card.submitted .value { color: #2e7d32; }
    .stat-card.won .value { color: #ff9800; }

    .tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
      border-bottom: 2px solid #e0e0e0;
      padding-bottom: 0;
    }

    .tab {
      padding: 12px 20px;
      background: transparent;
      border: none;
      font-size: 14px;
      font-weight: 500;
      color: #666;
      cursor: pointer;
      border-bottom: 2px solid transparent;
      margin-bottom: -2px;
      transition: all 0.2s;
    }

    .tab:hover {
      color: #e94560;
    }

    .tab.active {
      color: #e94560;
      border-bottom-color: #e94560;
    }

    .tab .count {
      background: #f0f0f0;
      padding: 2px 8px;
      border-radius: 10px;
      font-size: 12px;
      margin-left: 6px;
    }

    .tab.active .count {
      background: #fff5f7;
    }

    .bids-list {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    .bid-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      padding: 24px;
      border-left: 4px solid;
    }

    .bid-card.interested { border-left-color: #1565c0; }
    .bid-card.bidding { border-left-color: #e94560; }
    .bid-card.submitted { border-left-color: #2e7d32; }
    .bid-card.won { border-left-color: #ff9800; }

    .bid-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 12px;
    }

    .bid-title {
      color: #1a1a2e;
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 8px;
    }

    .bid-meta {
      display: flex;
      gap: 16px;
      font-size: 13px;
      color: #666;
    }

    .status-badge {
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-badge.interested { background: #e3f2fd; color: #1565c0; }
    .status-badge.bidding { background: #fff5f7; color: #e94560; }
    .status-badge.submitted { background: #e8f5e9; color: #2e7d32; }
    .status-badge.won { background: #fff3e0; color: #e65100; }
    .status-badge.lost { background: #fce4ec; color: #c2185b; }

    .bid-progress {
      margin: 16px 0;
    }

    .progress-bar {
      height: 8px;
      background: #f0f0f0;
      border-radius: 4px;
      overflow: hidden;
    }

    .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #e94560, #ff6b6b);
      transition: width 0.3s ease;
    }

    .progress-steps {
      display: flex;
      justify-content: space-between;
      margin-top: 8px;
      font-size: 11px;
      color: #999;
    }

    .progress-steps span.active {
      color: #e94560;
      font-weight: 500;
    }

    .bid-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 16px;
      border-top: 1px solid #f0f0f0;
    }

    .due-date {
      font-size: 14px;
    }

    .due-date.urgent {
      color: #c2185b;
      font-weight: 500;
    }

    .bid-actions {
      display: flex;
      gap: 8px;
    }

    .btn {
      padding: 8px 16px;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-primary {
      background: #e94560;
      color: #fff;
      border: none;
    }

    .btn-outline {
      background: transparent;
      color: #666;
      border: 1px solid #e0e0e0;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      background: #fff;
      border-radius: 12px;
    }

    .empty-state h3 {
      color: #1a1a2e;
      margin-bottom: 8px;
    }

    .empty-state p {
      color: #666;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <h1>Next<span>Bid</span></h1>
    <div>
      <a href="/opportunities">Opportunities</a>
      <a href="/bids" class="active">My Bids</a>
      <a href="/profile">Profile</a>
      <a href="/logout">Logout</a>
    </div>
  </nav>

  <div class="container">
    <div class="page-header">
      <h2>My Bids</h2>
    </div>

    <div class="stats-row">
      <div class="stat-card interested">
        <h4>Interested</h4>
        <div class="value">0</div>
      </div>
      <div class="stat-card bidding">
        <h4>In Progress</h4>
        <div class="value">0</div>
      </div>
      <div class="stat-card submitted">
        <h4>Submitted</h4>
        <div class="value">0</div>
      </div>
      <div class="stat-card won">
        <h4>Won</h4>
        <div class="value">0</div>
      </div>
    </div>

    <div class="tabs">
      <button class="tab active" data-tab="all">All <span class="count">0</span></button>
      <button class="tab" data-tab="interested">Interested <span class="count">0</span></button>
      <button class="tab" data-tab="bidding">In Progress <span class="count">0</span></button>
      <button class="tab" data-tab="submitted">Submitted <span class="count">0</span></button>
      <button class="tab" data-tab="won">Won <span class="count">0</span></button>
    </div>

    <div class="bids-list" id="bidsList">
      <div class="empty-state">
        <h3>No bids yet</h3>
        <p>Mark opportunities as "interested" to start tracking them here.</p>
        <a href="/opportunities" class="btn btn-primary">Browse Opportunities</a>
      </div>
    </div>
  </div>

  <script>
    // Tab switching
    document.querySelectorAll('.tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        // TODO: Filter bids by status
      });
    });

    // Render a bid card
    function renderBid(bid) {
      const progressPercent = {
        interested: 25,
        bidding: 50,
        submitted: 75,
        won: 100,
        lost: 100
      }[bid.status] || 0;

      return `
        <div class="bid-card ${bid.status}">
          <div class="bid-header">
            <div>
              <h3 class="bid-title">${bid.title}</h3>
              <div class="bid-meta">
                <span>${bid.agency}</span>
                <span>Est: ${bid.estimatedValue || 'N/A'}</span>
              </div>
            </div>
            <span class="status-badge ${bid.status}">${bid.status}</span>
          </div>

          <div class="bid-progress">
            <div class="progress-bar">
              <div class="progress-fill" style="width: ${progressPercent}%"></div>
            </div>
            <div class="progress-steps">
              <span class="${bid.status === 'interested' ? 'active' : ''}">Interested</span>
              <span class="${bid.status === 'bidding' ? 'active' : ''}">In Progress</span>
              <span class="${bid.status === 'submitted' ? 'active' : ''}">Submitted</span>
              <span class="${['won', 'lost'].includes(bid.status) ? 'active' : ''}">Result</span>
            </div>
          </div>

          <div class="bid-footer">
            <span class="due-date ${bid.isUrgent ? 'urgent' : ''}">
              Due: ${bid.dueDate}
            </span>
            <div class="bid-actions">
              <button class="btn btn-outline" onclick="updateStatus('${bid.id}')">Update Status</button>
              <button class="btn btn-primary" onclick="viewDetails('${bid.id}')">View Details</button>
            </div>
          </div>
        </div>
      `;
    }

    function updateStatus(id) {
      // TODO: Open status update modal
      console.log('Update status:', id);
    }

    function viewDetails(id) {
      window.location.href = '/opportunity/' + id;
    }
  </script>
</body>
</html>
